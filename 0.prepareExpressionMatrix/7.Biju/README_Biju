	# cp_fastq_for_missing_sorted_bam (only 20007-A)
	ssh -A -t anirudh@10.11.1.164 scp -r /mnt/Storage/Backupdata/Genome/workstation_15-11-2019/Biju\\\ stuff/BPAD_RNA-seq/NSC/RNA-Seq_analysis_raw_fastq_files/20007A_* genome@10.11.1.168:/mnt/HPStorage/Genome/Anirudh/Biju_RNA-Seq/NSC/fastq/

# generate sorted_bam for missing fastq (only 20007-A)

	# FastQC:
	nohup sh -c 'for a in *.fastq.gz; do /home/genome/anirudh/softwares/FastQC/fastqc $a -o QC/; done' &

# featureCounts (single-end)
	nohup /home/genome/anirudh/softwares/subread-2.0.2-source/bin/./featureCounts -T 10 -F GTF -a /home/genome/anirudh/softwares/GRCh37/Homo_sapiens.GRCh37.87.gtf -o ../featureCounts/fC_koskuvi.txt *_sorted.bam &

	Copy featureCounts data to local:
	scp -r genome@10.11.1.168:/mnt/HPStorage/Genome/Anirudh/Koskuvi_RNA-Seq/featureCounts/* /media/anirudh/Work/ADBS_NIMHANS/Thesis/1.Science/Omics/Transcriptomics/RNA_Seq/3.Koskuvi_2022/4.featureCounts/

# cuffdiff (generates fpkm matrix)
	nohup /home/genome/anirudh/softwares/cufflinks-2.2.1.Linux_x86_64/./cuffdiff -p 20 -T -o ../cuffdiff/ /home/genome/anirudh/softwares/GRCh37/Homo_sapiens.GRCh37.87.gtf *_sorted.bam &

	Copy cuffdiff data to local:
	scp -r genome@10.11.1.168:/mnt/HPStorage/Genome/Anirudh/Koskuvi_RNA-Seq/cuffdiff/* /media/anirudh/Work/ADBS_NIMHANS/Thesis/1.Science/Omics/Transcriptomics/RNA_Seq/3.Koskuvi_2022/5.cuffidff/
